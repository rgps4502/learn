# pip 安裝django
pip install django==3.1 

# 啟動專案
django-admin startproject api_v1

# 創建app名稱
pyhton manage.py startapp mysite

# 建立模板 / 靜態資料夾
mkdir templates static


# 更新資料庫
python manage.py makemigrations
python manage.py migrate

# 修改專案的settings.py
# INSTALLED_APPS 新增'mysite' 前面創建的app名稱
'mysite',

# TEMPLATES 新增 目錄位置
DIRS': [BASE_DIR / 'templates'],
# 最下面語言修改為繁體中文
LANGUAGE_CODE = 'zh-hant'